<mapper namespace="com.jzy.api.dao.sys.EmpMapper">

    <!-- 根据用户名查询用户 -->
    <select id="queryEmpByUsername" resultType="com.jzy.api.model.sys.Emp">
        SELECT
        id,
        name,
        pwd,
        dealer_id dealerId
        FROM
        sys_emp
        WHERE
        name = #{username}
    </select>

    <insert id="insert" parameterType="com.jzy.api.model.sys.Emp">
            INSERT INTO  sys_emp (
            `id`,
            `name`,
            `pwd`,
            `creator_id`,
            `modifier_id`,
            `create_time`,
            `modify_time`,
            `del_flag`,
            `dealer_id`
            )
            VALUES
            (
            #{id},
            #{name},
            #{pwd},
            #{creatorId},
            #{modifierId},
            #{createTime},
            #{modifyTime},
            #{delFlag},
            #{dealerId}
            )
    </insert>
    <!--修改-->
    <update id="update" parameterType="com.jzy.api.model.sys.Emp">
            UPDATE sys_emp
            SET
            `name` = #{name},
            `pwd` = #{pwd},
            `modify_time` =   #{modifyTime}
            WHERE
            (`dealer_id` =  #{dealerId})

    </update>


    /**
    *
    <b>功能描述：</b>
    <br>
    *
    <b>修订记录：</b>
    <br>
    *
    <li>20190514&nbsp;&nbsp;|&nbsp;&nbsp;唐永刚&nbsp;&nbsp;|&nbsp;&nbsp;创建方法</li>
    <br>
    */
    List
    <Emp>
    (@Param("name") String name);

    <!--   用户名称校验-->

    <select id="checkNameList" resultType="com.jzy.api.model.sys.Emp">

        select
        name,
        pwd
        from
        sys_emp
        where
        name=#{name}
        <if test="id!=null">
            and id!=#{id}
        </if>
    </select>

</mapper>
