<mapper namespace="com.jzy.api.dao.home.HomeRecommendCateMapper">


    <!--    渠道商首页推荐轮播图和推荐分类-->
    <select id="getList" resultType="com.jzy.api.vo.home.HomeRecommendCateVo">
        SELECT
            rci_name  as rciName ,
            sort_desc  as sortDesc,
            image_id as imageId,
            go_type  as goType,
            go_id as goId,
            go_name as goName
        FROM
            home_recommend_cate
        WHERE
            1 = 1
        AND dealer_id =#{dealerId}
        AND type =#{type}
        AND state = 1

</select>
    
</mapper>